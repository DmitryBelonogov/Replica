<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawerLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.nougust3.diary.ui.HomeActivity"
    android:focusable="true"
    android:focusableInTouchMode="true"
    fontPath="fonts/MartaRegular.otf"
    tools:ignore="MissingPrefix">

    <android.support.design.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

            <android.support.design.widget.AppBarLayout
                android:layout_height="wrap_content"
                android:layout_width="match_parent">

                <android.support.v7.widget.Toolbar
                    android:id="@+id/toolbar_actionbar"
                    android:layout_width="match_parent"
                    android:layout_height="?attr/actionBarSize"
                    android:background="@color/primary_light"/>

            </android.support.design.widget.AppBarLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:orientation="vertical"
            android:layout_marginTop="56dp">

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:inputType="textMultiLine"
                    android:id="@+id/editFastNote"
                    android:layout_margin="12dp"
                    android:background="#1af5f5f5"
                    android:hint="@string/edit_fast_note.hint"
                    android:textColor="#eee"
                    android:textColorHint="#acacaf"
                    android:gravity="center"
                    android:padding="10dp"/>

        </RelativeLayout>

        <ListView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="230dp"
            android:background="#f6f6f5"
            android:id="@+id/notesListView"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:paddingBottom="5dp"
            android:dividerHeight="0dp"
            android:divider="@null" />

        <TextView
            android:text="TextView"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginTop="195dp"
            android:id="@+id/listHeader"
            android:background="#f6f6f5"
            android:paddingLeft="16dp"
            android:textSize="16sp"
            android:gravity="center_vertical|start"/>

    </android.support.design.widget.CoordinatorLayout>


    <android.support.design.widget.NavigationView
        android:id="@+id/navigation"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="#eee"
        app:menu="@menu/navigation_menu"/>

</android.support.v4.widget.DrawerLayout>
